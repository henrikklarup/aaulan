            <li><a href="http://www.klingen.dk" target="_blank">Menukort</a></li>
            <%if (Context.User.Identity.IsAuthenticated)
                {%>
                <li><%: Html.ActionLink("Role Assignment","RoleAssignment", "Admin") %></li>
